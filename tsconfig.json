{
  "compilerOptions": {
    "types": ["reflect-metadata", "jest", "node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/**/tests/*"]
}